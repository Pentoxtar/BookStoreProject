@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div class="mt-4">
        <h2>Explore Our Featured Books</h2>
        <div class="row">
            @foreach (var book in Model.Take(3))
            {
                <div class="col-md-4">
                    <div class="card my-2 store-card">
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                            <div class="card-img-container">
                                <img src="@book.imageLinks?.thumbnail" alt="Book Image" class="card-img-top card-img-custom">
                            </div>
                            <div class="card-body text-center" style="height:100px;">
                                <h4 class="mb-3">@book.Title</h4>
                            </div>
                            <div class="card-body d-flex justify-content-between align-items-center">
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>