
<h1>Cart</h1>
@if (Model.Items != null && Model.Items.Count > 0)
{
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Book</th>
				<th>Author</th>
				<th>Price</th>
				<th>Remove</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model?.Items)
			{	
				<tr>
					<td>
						<a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.imageLinks?.thumbnail" style="height: 64px"></a>
					</td>
					<td>
						<a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
					</td>
					<td>
						<a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@string.Join(", ", item.Authors)</a>
					</td>
					<td>???</td>
					<td>
						<a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.Id" class="text-danger"><i class="fa-solid fa-xmark"></i></a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a class="a-cleanup1" asp-controller="Cart" asp-action="ClearCart"><div class="btn btn-danger float-right mr-5"><i class="fa-solid fa-trash-can"></i>Empty Cart</div></a>
}
else
{
	<h3 class="text-center">Cart is empty</h3>
}