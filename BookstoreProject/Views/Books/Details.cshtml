@model BookstoreProject.Models.Book
@{
	ViewData["Title"] = "Details";
}
<h1>Details</h1>
<div>
	<h4>Books</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.Title)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.Authors)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.Authors)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.Description)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.Publisher)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.Publisher)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.industryIdentifiers)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.industryIdentifiers)
		</dd>
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.DatePublished)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.DatePublished)
		</dd>
		
		<dt class="col-sm-3">
			@Html.DisplayNameFor(model=>model.imageLinks)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model=>model.imageLinks)
		</dd>
		
	</dl>
	<div class="col-4">
		<img src="@Model?.imageLinks?.thumbnail" class="w-100" />
	</div>
	
	<br>
</div>
<div>
	<a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i>Back</a>
	<a asp-action="Edit" asp-route-id="@Model?.Id"><i class="fa-solid fa-pen-to-square"></i>Edit</a>
	
</div>

