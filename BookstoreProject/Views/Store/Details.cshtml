@model BookstoreProject.Models.Book
@{
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div class="row">
    <div class="col-7">
        <div>
            <h4>Books</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Authors)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Authors)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Publisher)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Publisher)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.industryIdentifiers)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.industryIdentifiers)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DatePublished)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DatePublished)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.SaleInfo)
                </dt>
                <dd class="col-sm-9">
                    <p>???</p>
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-warning"><i class="fa-solid fa-arrow-left"></i>Back</a>
            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model?.Id" class="btn btn-primary store-btn float-right mr-4"><i class="fa-solid fa-cart-shopping"></i>Add to cart</a>
        </div>
    </div>
    <div class="col-5">
        <img src="@Model.imageLinks?.thumbnail" alt="Book Image" class="card-img-top mx-auto d-block img-thumbnail">
    </div>
</div>
